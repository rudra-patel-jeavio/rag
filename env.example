# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rag_db

# OpenAI API Key (for embeddings and LLM)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere API Key
# COHERE_API_KEY=your_cohere_api_key_here

# Mistral API Key
# MISTRAL_API_KEY=your_mistral_api_key_here

# Groq API Key (for fast LLM inference)
GROQ_API_KEY=your_groq_api_key_here

# Embedding Configuration
# For Groq-only setup, use sentence_transformers for local embeddings
EMBEDDING_MODEL_TYPE=sentence_transformers  # or openai if you have OpenAI key
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2  # Fast local model, good for most use cases

# Alternative embedding models (uncomment to use):
# EMBEDDING_MODEL_NAME=all-mpnet-base-v2  # Better quality, slower
# EMBEDDING_MODEL_NAME=multi-qa-MiniLM-L6-cos-v1  # Optimized for Q&A

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost 